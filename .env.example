# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# API Configuration (Optional - will use mock API if not provided)
# NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api
# NEXT_PUBLIC_API_TIMEOUT=10000

# WebSocket Configuration (Optional - will use mock updates if not provided)
# VITE_WS_URL=ws://localhost:3001

# Firebase Configuration (Optional - for production deployment)
# NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Security (Optional - for production)
# NEXT_PUBLIC_ENCRYPTION_KEY=your_encryption_key
# NEXT_PUBLIC_CSRF_TOKEN=your_csrf_token

# Third-party Services (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Note: The application will automatically use mock data and APIs when backend services are not available.
# This allows the frontend to function independently for development and demonstration purposes.